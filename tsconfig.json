{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,  
    "target": "ES2019",
    "lib": ["es2019"],     
    "moduleResolution": "node",
    "esModuleInterop": true,
    "module": "commonjs",         
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true
  },
  "exclude": ["./.eslintrc.js","./dist"]
}
